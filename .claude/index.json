    "description": "GPT 学术优化 - 为学术工作设计的 AI 助手",
    "author": "binary-husky",
    "repository": "https://github.com/binary-husky/gpt_academic",
    "license": "自定义"
  },

  "entryPoints": {
    "main": "main.py",
    "config": "config.py",
    "core": "core_functional.py",
    "advanced": "crazy_functional.py"
  },

  "directories": {
    "plugins": "crazy_functions/",
    "llm": "request_llms/",
    "utils": "shared_utils/",
    "themes": "themes/",
    "docs": "docs/",
    "tests": "tests/"
  },

  "supportedModels": {
