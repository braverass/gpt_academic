    "domestic": ["qwen", "glm-4", "ernie", "spark"],
    "opensource": ["llama2", "chatglm2", "deepseekcoder"]
  },

  "plugins": {
    "arxiv-translate": "Arxiv 论文精细翻译",
    "audio-input": "实时语音对话输入",
    "void-terminal": "虚空终端插件（自然语言调度）",
    "code-analysis": "程序剖析 Python/C/C++/Java/...",
    "batch-comments": "批量注释生成",
    "pdf-translate": "PDF 论文全文翻译",
    "latex-proofread": "Latex 论文一键校对",
    "google-scholar": "谷歌学术统合小助手",
    "markdown-translate": "Markdown 中英互译"
  },

  "features": {
    "mermaid": "支持 Mermaid 图像渲染",
    "multi-model": "多 LLM 模型支持",
    "hot-reload": "插件热更新",
    "custom-shortcuts": "自定义快捷键",
    "dark-theme": "暗色主题支持",
    "multi-language": "多语言界面（中英日韩俄法）"
